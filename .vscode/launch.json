            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Frontends/ECommerce.Web/bin/Debug/net7.0/ECommerce.Web.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Frontends/ECommerce.Web",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
