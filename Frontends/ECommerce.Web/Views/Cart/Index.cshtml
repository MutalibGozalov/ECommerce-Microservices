@{
    ViewData["Title"] = "Shopping Cart";
}
@model CartViewModel

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Shopping Cart</div>

                @if (Model is not null && Model.CartItems.Any())
                {
                    <table class="table table-striped">
                        <tr>
                            <th>Product name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th></th>
                            <th></th>
                        </tr>
                        @foreach (var product in Model.CartItems)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>@product.Price $</td>
                                <td>@product.Quantity</td>
                                <td><a asp-controller="Cart" asp-action="AddItemToCart" asp-route-productId="@product.ProductId"
                                        class="btn btn-primary"><i class="bi bi-plus"></i></a></td>
                                <td><a asp-controller="Cart" asp-action="RemoveCartItem" asp-route-productId="@product.ProductId"
                                        class="btn btn-danger"><i class="bi bi-dash"></i></a></td>
                            </tr>
                        }
                        @if (Model.HasDiscount)
                        {
                            <tr>
                                <td>Discount</td>
                                <td colspan="4">% @Model.DiscountRate.Value</td>
                            </tr>
                        }
                        <tr>
                            <td>Total price</td>
                            <th colspan="4">@Model.TotalPrice $</th>
                        </tr>
                    </table>

                    <form asp-controller="Cart" asp-action="ApplyDiscount">
                        @if(Model.HasDiscount)
                        {
                            <div class="alert alert-success">
                                "@Model.DiscountCode" discount code applied
                            </div>
                        }
                        @if(TempData["discountstatus"] is not null && TempData["discountstatus"] is false)
                        {
                            <div class="text-danger">Discount code is expired or not correct</div>
                        }
                        <div class="input-group mb-3">
                            <input type="text" >
                        </div>
                    </form>
                }
                else
                {
                    <div class="alert alert-info">There are no items in cart</div>
                }
            </div>
        </div>
    </div>
</div>

