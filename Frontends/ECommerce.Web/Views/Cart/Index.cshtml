@{
    ViewData["Title"] = "Shopping Cart";
}
@model CartViewModel

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Shopping Cart</div>

                @if (Model is not null && Model.CartItems.Any())
                {
                    <table class="table table-striped">
                        <tr>
                            <th>Product name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </table>
                    @foreach(var product in Model.CartItems)
                    {
                        <tr>
                            <td>@product.Name</td>
                            <td>@product.Price $</td>
                            <td>@product.Quantity</td>
                            <td><a asp-controller="Cart" asp-action="AddItemToCart" asp-route-id="@product.ProductId" class="btn btn-primary"><i class="bi bi-plus"></i></a></td>
                            <td><a asp-controller="Cart" asp-action="RemoveCartItem" asp-route-id="@product.ProductId" class="btn btn-danger"><i class="bi bi-dash"></i></a></td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-info">There are no items in cart</div>
                }
            </div>
        </div>
    </div>
</div>

