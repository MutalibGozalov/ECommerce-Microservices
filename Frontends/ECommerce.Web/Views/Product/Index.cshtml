@{
    ViewData["Title"] = "Products";
}
@model List<ProductViewModel>

<div class="row">
    <div class="col-md-12">
        <div class="card-body">
            <h5 class="card-title">Products</h5>

            <a asp-controller="Product" asp-action="Create" class="btn btn-primary mb-3">Create new Product</a>
            @if (@Model.Any())
            {
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Product picture</th>
                            <th>Product category</th>
                            <th>Product name</th>
                            <th>Product price</th>
                            <th>Product description</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td><img style="width: 72px;" src="@product.DetailImage" class="img-thumbnail"/></td>
                                <td>@product.CategoryName</td>
                                <td>@product.Name</td>
                                <td>@product.DisplayPrice</td>
                                <td>@product.Description</td>
                                <td><a asp-controller="Product" asp-action="Update" asp-route-id="@product.Id" class="btn btn-success">Edit</a></td>
                                <td><a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">
                    No Products are saved DARLIN!
                </div>
            }
        </div>
    </div>
</div>