@{
    ViewData["Title"] = "Product Detail";
}
@model ProductViewModel

<div class="row">
    <div class="col-md-9">
        <div class="card">
            <img src="@Model.DetailImage" alt="" class="card-img-tab">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Price: @Model.DisplayPrice $</h4>
                <a href="#" class="btn btn-primary btn-block">Add to card</a>
            </div>
        </div>
    </div>
</div>